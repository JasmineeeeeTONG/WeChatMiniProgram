/* pages/calc2/calc2.wxss */

.label-list {
  margin: 5px;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e8e8e8;
}
.label-list .label {
  color: #333;
  font-size: 36rpx;
  margin-top: 10px;
  margin-bottom: 5px;
}
.label-list .label-right {
  margin-left: auto;
}
.btns {
  display: flex;
  margin-top: 10px;
}
.btns button {
  border: 1px solid #e8e8e8;
  font-size: 12px;
}
input {
  margin-left: auto;
  border-bottom: 1px black solid;
  width: 100%;
}
.result {
  margin-top: 10px;
}
/*表格*/
.table{
  font-size: 15px;
  width: 98%;
  margin-left: 1%;
  margin-right: 1%;
  margin-top: 5%;
}
/*设置行*/
.tr {
  width: 100%;
  display: flex;
  /*垂直居中*/
  align-items: center;
  /*水平居中*/
  justify-content: center;
  font-size: 11px;
}
/*设置所有单元格*/
.th,.td{
  width: 40%;
 /*文字居中*/
 text-align: center;
 /*垂直居中*/
 align-items: center;
 /*水平居中*/
 justify-content: center;
}
/*标题单元格*/
.th {
 display: flex;
 font-size: 11px;
}
/*单元格*/
.tr {
  border-bottom: 1px solid gray;
  padding: 2px;
}
